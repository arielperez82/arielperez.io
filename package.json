    "astro": "^5.7.12",
    "autoprefixer": "^10.4.21",
    "eslint-import-resolver-typescript": "^4.3.4",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
