{
  "name": "arielperez.io",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "postbuild": "tsx scripts/generate-llms-txt.ts",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "predeploy": "pnpm build",
    "deploy": "gh-pages -d dist",
    "lint:md": "markdownlint .",
    "lint:md:fix": "markdownlint --fix .",
    "lint:format": "prettier --check .",
    "lint:format:fix": "prettier --write .",
    "lint:code": "eslint src scripts",
    "lint:code:fix": "eslint --fix src scripts",
    "lint:styles": "stylelint 'src/**/*.{css,astro}'",
    "lint:styles:fix": "stylelint 'src/**/*.{css,astro}' --fix",
    "lint:fix": "pnpm run lint:code:fix && pnpm run lint:styles:fix && pnpm run lint:format:fix && pnpm run lint:md:fix"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.2.6",
    "@astrojs/react": "^4.2.7",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "astro-seo-meta": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "eslint-import-resolver-typescript": "^4.3.4",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sharp": "^0.34.1",
    "turndown": "^7.2.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@tailwindcss/vite": "^4.1.7",
    "@types/node": "^22.15.19",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "astro": "^5.7.12",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-mdx": "^3.4.2",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "markdownlint-cli": "^0.44.0",
    "postcss-html": "^1.8.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "stylelint-config-astro": "^1.0.4",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tailwindcss": "^4.1.7",
    "tsx": "^4.19.4",
    "typescript-eslint": "^8.32.1"
  },
  "lint-staged": {
    "*.md": [
      "pnpm run lint:format:fix",
      "pnpm run lint:md:fix"
    ],
    "*.{js,jsx,ts,tsx,astro,mdx}": [
      "pnpm run lint:format:fix",
      "pnpm run lint:code:fix",
      "pnpm run astro check"
    ],
    "*.{css,astro}": [
      "pnpm run lint:styles:fix"
    ]
  }
}
