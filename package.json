{
  "name": "arielperez.io",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "postbuild": "pnpm run generate:llms-txt",
    "start": "pnpm check --watch & pnpm dev",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "predeploy": "pnpm build",
    "deploy": "gh-pages -d dist",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "lint:md": "markdownlint .",
    "lint:md:fix": "markdownlint --fix .",
    "lint:format:code": "prettier --check '{src,scripts}/**/*.{js,jsx,ts,tsx,astro}'",
    "lint:format:code:fix": "prettier --write '{src,scripts}/**/*.{js,jsx,ts,tsx,astro}'",
    "lint:format:css": "prettier --check 'src/**/*.{css,astro}'",
    "lint:format:css:fix": "prettier --write 'src/**/*.{css,astro}'",
    "lint:format:md": "prettier --check '*.md'",
    "lint:format:md:fix": "prettier --write '*.md'",
    "lint:format": "pnpm run lint:format:code && pnpm run lint:format:css",
    "lint:format:fix": "pnpm run lint:format:code:fix && pnpm run lint:format:css:fix && pnpm run lint:format:md:fix",
    "lint:code": "eslint src scripts",
    "lint:code:fix": "eslint --fix src scripts",
    "lint:styles": "stylelint 'src/**/*.{css,astro}'",
    "lint:styles:fix": "stylelint 'src/**/*.{css,astro}' --fix",
    "lint": "pnpm run lint:format && pnpm run lint:code && pnpm run lint:styles && pnpm run lint:md",
    "lint:fix": "pnpm run lint:format:fix && pnpm run lint:code:fix && pnpm run lint:styles:fix && pnpm run lint:md:fix",
    "generate:llms-txt": "dotenv -- tsx scripts/generate-llms-txt.ts"
  },
  "dependencies": {
    "@astrojs/markdown-remark": "^6.3.7",
    "@astrojs/mdx": "^4.3.6",
    "@astrojs/react": "^4.4.0",
    "@astrojs/sitemap": "^3.6.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "astro-seo": "^0.8.4",
    "astro-seo-meta": "^5.2.0",
    "autoprefixer": "^10.4.21",
    "dotenv-cli": "^10.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.34.4",
    "tailwind-merge": "^3.3.1",
    "tinybird-analytics": "github:arielperez82/web-analytics#path:/client",
    "turndown": "^7.2.1",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^22.18.6",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "astro": "^5.14.1",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "markdownlint-cli": "^0.44.0",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-sort-imports": "^1.8.8",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "stylelint": "^16.24.0",
    "stylelint-config-alphabetical-order": "^1.0.0",
    "stylelint-config-astro": "^1.0.4",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-prettier": "^5.0.3",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.6",
    "typescript-eslint": "^8.44.1"
  }
}
