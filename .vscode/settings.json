{
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "editor.formatOnSave": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.validate": ["javascript", "typescript", "astro", "mdx"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.fixAll.stylelint": "always",
    "source.organizeImports": "never" // Disable VS Code's built-in import sorting
  },
  // Let Stylelint handle linting for these file types
  "stylelint.validate": [
    "css",
    "scss",
    "less",
    "postcss",
    "sass",
    "vue",
    "astro"
  ]
}
